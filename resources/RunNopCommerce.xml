<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="NopCommerce Automation Testing" verbose="1">
    <listeners>
        <listener class-name="commons.MethodListener"></listener>
        <listener class-name="reportConfig.AllureTestListener"></listener>
    </listeners>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="CHROME_HEADLESS"></parameter>
        <classes>
            <class name="com.nopcommerce.users.Level_22_ConfigBrowser"/>
        </classes>
    </test>

</suite>