<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="NopCommerce Automation Testing" verbose="1">
    <listeners>
        <listener class-name="commons.MethodListener"></listener>
        <listener class-name="reportConfig.AllureTestListener"></listener>
    </listeners>

    <test name="Run on Chrome browser" preserve-order="true">
        <parameter name="browser" value="chrome" ></parameter>
        <classes>
            <class name="com.nopcommerce.share.Common_Register"/>
            <class name="com.nopcommerce.share.Order"/>
            <class name="com.nopcommerce.share.Payment"/>
        </classes>
    </test>

</suite>