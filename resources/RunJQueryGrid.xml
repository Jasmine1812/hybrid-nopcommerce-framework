<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Data Table - Data Grid" verbose="1">
    <parameter name="osName" value="windows"></parameter>
    <parameter name="ipAddress" value="192.168.0.108"></parameter>
    <parameter name="port" value="4444"></parameter>

    <test name="Run on Chrome browser">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.jquery.table.Level_32_GRID4_DEMO"/>
        </classes>
    </test>

    <test name="Run on Firefox browser">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="com.jquery.table.Level_32_GRID4_DEMO"/>
        </classes>
    </test>

    <test name="Run on Edge browser">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.jquery.table.Level_32_GRID4_DEMO"/>
        </classes>
    </test>
</suite>